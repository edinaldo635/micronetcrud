@model IEnumerable<loja.Models.ProdutoViewModel>
<link rel="stylesheet" href="/css/produto.css" asp-append-version="true" />

<form>
    <div class="container row">
        @foreach (var produto in Model)
        {
            <div class="col-md-3 mb-2">
                <a href="/Home/ProdutoDetails/@produto.Id">
                    <div class="card">
                        <img class="img-thumbnail" src="/images/@produto.ImagemURL">
                        <div class="card-body">
                            <h5 class="card-title mb-2">
                                @produto.Nome   
                            </h5>
                            <p class="cart-text text-black">
                                <b>@produto.Preco.ToString("C")</b>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</form>