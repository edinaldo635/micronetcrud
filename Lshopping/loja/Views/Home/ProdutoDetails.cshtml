@model loja.Models.ProdutoViewModel

<form method="post">
    <input asp-for="Id" hidden/>
    <h3 class="mb-5">Detalhes do Produto</h3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="/images/@Model.ImagemURL">       
        </div>
        <div class="col-md-4">
            <h3>@Model.Nome</h3>
            <p class="mb-4">@Model.Descricao</p>
            <p class="mb-4 text-black">
                <b>
                    @Model.Preco.ToString("C");
                </b>
            </p>
            <p>
            <div class="row text-black">
                  <label class="col-md-2 control-label">Quantidade</label>
                  <input asp-for="Quantidade" class="form-control"/>
                  <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
             <div class= "row" style="padding-top:20px">
                <div class="col-5 col-md-5 mb-5">
                    <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</form>
