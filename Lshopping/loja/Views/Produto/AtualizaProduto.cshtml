@model loja.Models.ProdutoViewModel

<h3>Atualização de Produto</h3>

<hr />
<form asp-action="AtualizaProduto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CategoriaId" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="ImagemURL" class="control-label"></label>
            <input asp-for="ImagemURL" class="form-control" />
            <span asp-validation-for="ImagemURL" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <img src="~/images/@Model.ImagemURL" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Preco" class="control-label"></label>
            <input asp-for="Preco" asp-format="{0000:N2}" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>    
    </div>
    

    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Alterar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</form>