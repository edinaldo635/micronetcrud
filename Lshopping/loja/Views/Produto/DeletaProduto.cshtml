@model loja.Models.ProdutoViewModel

<h3>Exclusão de Produto</h3>

<h4>Você deseja mesmo deletar?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemURL)
        </dt>
       </dl>
        <div class="row">
          <div class="form-group col-md-4">
            <img src="~/imagens/@Model.ImagemURL" />
          </div>
        </div>    
   
    <form asp-action="DeletaProduto">
        <input type="hidden" asp-for="Id" />
          <div class="form-group" style="padding-top: 10px">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Voltar</a>
        </div>
    </form>
</div>